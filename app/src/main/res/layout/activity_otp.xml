<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OTP">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the verification code sent to your number"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#6e6e6e"
        android:textSize="20sp"
        android:layout_below="@+id/logo"
        android:id="@+id/txthead"
        android:padding="20dp">

    </TextView>

    <EditText
        android:id="@+id/vecode"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/txthead"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:hint="Verification Code"
        android:textAlignment="center"
        android:textColor="@color/black">

    </EditText>

    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vecode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Didn't receive? Resend"
        android:textSize="18dp">

    </TextView>

    <Button
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/resend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#FF00FF"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Verify"
        android:textColor="@color/white">

    </Button>

    <ProgressBar
        android:id="@+id/auth_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible">

    </ProgressBar>


</RelativeLayout>