<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="-5dp">

        <TextView
            android:id="@+id/nameofuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Name displayed in  this section"
            android:textColor="#0b0b0b"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/usercardview"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:id="@+id/userstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameofuser"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/usercardview"
            android:layout_marginTop="3dp"
            android:text="status dispalys here"
            android:textColor="@color/color_primary"
            android:textSize="12sp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            app:cardCornerRadius="55dp"
           android:layout_centerVertical="true"
            android:layout_marginBottom="20sp"
            android:id="@+id/usercardview">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_24"
                android:id="@+id/userimageview"
                android:scaleType="centerCrop">

            </ImageView>


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#a6a6a6"
            android:background="#a6a6a6"
            android:layout_below="@id/usercardview"
            android:layout_toRightOf="@id/usercardview"
            android:layout_marginTop="-5dp">

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>